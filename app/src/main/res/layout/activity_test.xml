<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_gps_name"
        android:layout_width="116dp"
        android:layout_height="62dp"
        android:text="@string/gps_str"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="58dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_address_name"
        android:layout_width="116dp"
        android:layout_height="61dp"
        android:layout_marginTop="38dp"
        android:text="@string/address_str"
        app:layout_constraintStart_toStartOf="@+id/tv_gps_value"
        app:layout_constraintTop_toBottomOf="@+id/tv_gps_value" />

    <TextView
        android:id="@+id/tv_gps_value"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        app:layout_constraintStart_toStartOf="@+id/tv_gps_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_gps_name" />

    <TextView
        android:id="@+id/tv_address_value"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        app:layout_constraintStart_toStartOf="@+id/tv_address_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_address_name" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>